<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_mrpproduction">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">

                        <table class="table table-sm table1" style="margin-bottom: -1px !important;">
                            <tr>
                                <td style="padding: 7px; width: 25%; border: 1px solid #dee2e6;">
                                    <strong>Product</strong>
                                </td>
                                <td style="width: 75%; text-align: left; border: 1px solid #dee2e6;">
                                    <span t-field="o.product_id.display_name"
                                          style="padding: 5px; display: block; "/>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-sm">
                            <tr>
                                <td style="width: 75%; border: 1px solid #dee2e6;">
                                    <table class="table table-sm table2" style="margin: 0px !important;">
                                        <tr>
                                            <td style="padding: 7px; width: 20%; border: 1px solid #dee2e6;">
                                                <strong>Customer</strong>
                                            </td>
                                            <td style="width: 30%; border: 1px solid #dee2e6;">
                                                <span t-esc="o.get_customer()"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="padding: 7px; width: 20%; border: 1px solid #dee2e6;">
                                                <strong>Formula#</strong>
                                            </td>
                                            <td style="width: 30%; border: 1px solid #dee2e6;">
                                                <span t-field="o.bom_id.code"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding: 7px; width: 20%; border: 1px solid #dee2e6;">
                                                <strong>PO</strong>
                                            </td>
                                            <td style="width: 30%; border: 1px solid #dee2e6;">
                                                <span t-esc="o.get_customer_ref()"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="padding: 7px; width: 20%; border: 1px solid #dee2e6;">
                                                <strong>MO#</strong>
                                            </td>
                                            <td style="width: 30%; border: 1px solid #dee2e6;">
                                                <span t-field="o.name"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width: 20%; border: 1px solid #dee2e6;">
                                                <strong>Quamtity</strong>
                                            </td>
                                            <td style="width: 30%; border: 1px solid #dee2e6;">
                                                <span t-field="o.qty_producing"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                                <!--                                td for company logo-->
                                <td style="width: 25%; border: 1px solid #dee2e6;">
                                    <img src='/web/binary/company_logo' class=""
                                         style="height: auto; margin: 10px; width: 80%; object-fit: scale-down;"
                                         alt="Logo"/>
                                </td>
                            </tr>
                        </table>
                        <br></br>

                        <div style="border: 1px solid #dee2e6; padding-left: 5px; padding-right: 5px; padding-top: 20px; padding-bottom: 30px">
                            <div>
                                <span>
                                    Start time:
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                                <span>
                                    Stop time:
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                                <span>
                                    Total time:
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">
                                <span>
                                    Total number of personal to complete order:
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">Downtime</div>
                            <div>
                                <span>
                                    1.
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">
                                <span>
                                    2.
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">
                                <span>
                                    3.
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">
                                <span>
                                    4.
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>
                            <div style="margin-top: 10px">
                                <span>
                                    5.
                                    <input type="text" style="border:none;
                                            border-bottom: 1px solid #dee2e6;"></input>
                                </span>
                            </div>

                        </div>
                        <br></br>
                        <br></br>


                        <table class="table table-sm" t-if="o.move_raw_ids">
                            <t t-set="has_product_barcode" t-value="any(m.product_id.barcode for m in o.move_raw_ids)"/>
                            <thead>
                                <tr>
                                    <th style="border: 1px solid #dee2e6;">Item Number</th>
                                    <th style="border: 1px solid #dee2e6; width: 50%;">Description</th>
                                    <th style="border: 1px solid #dee2e6;">Qty</th>
                                    <th style="border: 1px solid #dee2e6;">Qty Used</th>
                                    <th style="border: 1px solid #dee2e6;">Qty of samples</th>
                                    <th style="border: 1px solid #dee2e6;">Scrap</th>
                                    <th style="border: 1px solid #dee2e6;">Returned</th>
                                    <th style="border: 1px solid #dee2e6;">Reconcile %</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="o.move_raw_ids">
                                    <tr t-foreach="o.move_raw_ids" t-as="raw_line">
                                        <td style="border: 1px solid #dee2e6;">
                                            <span t-field="raw_line.product_id.default_code"/>
                                        </td>
                                        <td style="border: 1px solid #dee2e6; width: 50%;">
                                            <span t-field="raw_line.product_id"/>
                                        </td>
                                        <td style="border: 1px solid #dee2e6;">
                                            <span t-field="raw_line.product_uom_qty"/>
                                            <span t-field="raw_line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                        <td style="border: 1px solid #dee2e6;">
                                            <t t-if="raw_line.quantity_done > 0">
                                                <span t-field="raw_line.quantity_done"/>
                                                <span t-field="raw_line.product_uom" groups="uom.group_uom"/>
                                            </t>
                                        </td>

                                        <td style="border: 1px solid #dee2e6;" class="text-center">

                                        </td>
                                        <td style="border: 1px solid #dee2e6;" class="text-center">

                                        </td>
                                        <td style="border: 1px solid #dee2e6;" class="text-center">

                                        </td>
                                        <td style="border: 1px solid #dee2e6;" class="text-center">

                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <span>
                            Bill of Material / Components Reconcile Percentage must be +/- 10% anything out of range
                            will require an investigation
                        </span>

                        <br></br>
                        <br></br>
                        <h5>Instructions</h5>
                        <t t-foreach="o.workorder_ids" t-as="process">
                            <t t-foreach="process.check_ids" t-as="check_list">
                                <t t-set="worksheet" t-value="check_list.get_worksheet()"></t>
                            </t>
                        </t>


                        <t t-foreach="worksheet.x_checklist_line_ids" t-as="instruction_line">
                            <table class="table table-sm" style="margin-top: 10px;">
                                <tr>
                                    <td class="" style="margin-right: 0px!important; margin-left: 0px!important; margin-bottom: -1px!important; text-align: left; border: 1px solid #dee2e6; width: 100%; ">
                                        <span t-field="instruction_line.x_step"
                                              style="padding: 5px;"/>
                                        <span style="padding: 5px;">.</span>
                                        <span t-field="instruction_line.x_name"
                                              style="padding: 5px;"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="display: inline-flex; text-align: left; width: 100%; padding: 0px!important">
                                        <table class="table table-sm" style="">
                                            <tr>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <strong>Production</strong>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <span t-field="instruction_line.x_completed_by"
                                                          style="padding: 10px; display: block; "/>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <strong>Date</strong>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <span t-field="instruction_line.x_completed_date"
                                                          style="padding: 10px; display: block; "/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <strong>Quality Control</strong>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <span t-field="instruction_line.x_verified_by"
                                                          style="padding: 10px; display: block; "/>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <strong>Date</strong>
                                                </td>
                                                <td style="vertical-align: middle; text-align: left; border: 1px solid #dee2e6; width: 25%; ">
                                                    <span t-field="instruction_line.x_verified_date"
                                                          style="padding: 10px; display: block; "/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </t>


                        <!--                        <div class="oe_structure"/>-->
                        <div class="row">
                            <div class="col-7">
                                <h3>
                                    <span t-field="o.name"/>
                                </h3>
                            </div>
                        </div>
                        <br></br>

                        <div class="row col-12">
                            <div class="column col-9">
                                <div class="row mt32 mb32">
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Part No.:</strong>
                                        <span t-field="o.product_id.default_code" style="margin-left: 10px;"/>
                                    </div>
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Description:</strong>
                                        <span t-field="o.product_id.name" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Quantity:</strong>
                                        <span t-field="o.qty_producing" style="margin-left: 10px;"/>
                                    </div>
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Unit:</strong>
                                        <span t-field="o.product_id.uom_id.id" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                            </div>

                            <div class="column col-3">
                                <t t-foreach="o.workorder_ids" t-as="process">
                                    <t t-foreach="process.check_ids" t-as="check_list">
                                        <t t-set="worksheet1" t-value="check_list.get_worksheet()"></t>
                                    </t>
                                </t>
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="display: inline-flex;">
                                        <strong>Start Time:</strong>
                                        <span t-esc="worksheet1.x_start_time" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="display: inline-flex;">
                                        <strong>Stop Time:</strong>
                                        <span t-esc="worksheet1.x_stop_time" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="display: inline-flex;">
                                        <strong>Retain:</strong>
                                        <span t-esc="worksheet1.x_retain" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br></br>


                        <div class="row col-12">
                            <div class="column col-9">
                                <div class="row mt32 mb32">
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Product formula revision:</strong>
                                        <span style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Manufactured date:</strong>
                                        <span t-field="worksheet1.x_manufactured_date" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-6" style="display: inline-flex;">
                                        <strong>Batch ticket job #:</strong>
                                        <span style="margin-left: 10px;"/>
                                    </div>
                                </div>
                            </div>

                            <div class="column col-3">
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="display: inline-flex;">
                                        <strong>Due date:</strong>
                                        <span t-esc="o.date_planned_start.date()" style="margin-left: 10px;"/>
                                    </div>
                                </div>
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="display: inline-flex;">
                                        <strong>QC lot sign off:</strong>
                                        <span style="margin-left: 10px;"/>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <hr></hr>
                        <div t-if="o.workorder_ids" groups="mrp.group_mrp_routings">
                            <h3>
                                <span>Operations Details</span>
                            </h3>
                            <br></br>

                            <t t-foreach="o.workorder_ids" t-as="process">
                                <t t-foreach="process.check_ids" t-as="check_list">
                                    <t t-set="worksheet" t-value="check_list.get_worksheet()"></t>
                                    <h4>
                                        <span t-esc="process.name"></span>
                                    </h4>

                                    <!--                                    Components section-->
                                    <h5>Components</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <th style="width: 7%">
                                                <strong>Part</strong>
                                            </th>
                                            <th style="width: 48%;">
                                                <strong>Description</strong>
                                            </th>
                                            <!--                                            <th style="width: 7%;">-->
                                            <!--                                                <strong>Percentage</strong>-->
                                            <!--                                            </th>-->
                                            <th style="width: 7%;">
                                                <strong>Quantity</strong>
                                            </th>
                                            <th style="width: 7%;">
                                                <strong>Unit</strong>
                                            </th>
                                            <th style="width: 12%;">
                                                <strong>Added by</strong>
                                            </th>
                                            <th style="width: 12%;">
                                                <strong>Verified by</strong>
                                            </th>
                                        </tr>
                                        <tr t-foreach="worksheet.x_mixing_line_ids" t-as="mixing_line">
                                            <td style="vertical-align: middle; text-align: left;">
                                                <span t-field="mixing_line.x_part"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: left;">
                                                <span t-field="mixing_line.x_product_id.display_name"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <!--                                            <td style="vertical-align: middle; text-align: right;">-->
                                            <!--                                                <span t-esc="o.get_percentage(mixing_line.x_product_id)"-->
                                            <!--                                                      style="padding: 5px; display: block; "/>-->
                                            <!--                                            </td>-->
                                            <td style="vertical-align: middle; text-align: right;">
                                                <span t-field="mixing_line.x_qty"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: left;">
                                                <span t-field="mixing_line.x_uom.name"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center;">
                                                <span t-field="mixing_line.x_added_by.name"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center;">
                                                <span t-field="mixing_line.x_verify_by.name"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                        </tr>
                                    </table>


                                    <!--                                    Checklist/Instructions section-->
                                    <h5>Instructions</h5>
                                    <table class="table table-sm">
                                        <tr>
                                            <th style="vertical-align: middle;">
                                                <strong>Step</strong>
                                            </th>
                                            <th style="vertical-align: middle;">
                                                <strong>Instruction</strong>
                                            </th>
                                            <th style="vertical-align: middle;">
                                                <strong>Completed by</strong>
                                            </th>
                                            <th style="vertical-align: middle;">
                                                <strong>Date</strong>
                                            </th>
                                            <th style="vertical-align: middle;">
                                                <strong>Verified by</strong>
                                            </th>
                                            <th style="vertical-align: middle;">
                                                <strong>Date</strong>
                                            </th>
                                        </tr>
                                        <tr t-foreach="worksheet.x_checklist_line_ids" t-as="instruction_line">
                                            <td style="vertical-align: middle; text-align: left;">
                                                <span t-field="instruction_line.x_step"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: left; width: 50%;">
                                                <span t-field="instruction_line.x_name"
                                                      style="padding: 5px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center; width: 12%;">
                                                <span t-field="instruction_line.x_completed_by"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center; width: 12%;">
                                                <span t-field="instruction_line.x_completed_date"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center; width: 12%;">
                                                <span t-field="instruction_line.x_verified_by"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                            <td style="vertical-align: middle; text-align: center; width: 12%;">
                                                <span t-field="instruction_line.x_verified_date"
                                                      style="border: 1px solid #dee2e6; padding: 10px; display: block; "/>
                                            </td>
                                        </tr>
                                    </table>
                                </t>
                            </t>
                        </div>


                        <div class="row col-12">
                            <div class="column col-6">
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="">
                                        <strong>Quality comments:</strong>
                                        <span style="">
                                            <textarea rows="7" style="width: 100%;"></textarea>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="column col-6">
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="">
                                        <strong>Production comments:</strong>
                                        <span style="">
                                            <textarea rows="7" style="width: 100%;"></textarea>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br></br>
                        <br></br>

                        <div class="row col-12">
                            <div class="column col-12">
                                <div class="row mt32 mb32">
                                    <div class="col-12" style="">
                                        <span style="">
                                            <span t-esc="o.x_revision_memo_mo" style="width: 100%;"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br></br>
                        <br></br>
                        <br></br>


                        <span style="width: 100%; text-align: center">
                            <h5>Quality Control</h5>
                        </span>
                        <table class="table table-sm">
                            <tr>
                                <th style="width: 40%; text-align: left;">
                                    <strong>Test name</strong>
                                </th>
                                <th style="width: 20%;">
                                    <strong>Minimum</strong>
                                </th>
                                <th style="width: 20%;">
                                    <strong>Maximum</strong>
                                </th>
                                <th style="width: 20%;">
                                    <strong>Target</strong>
                                </th>
                            </tr>
                            <tr t-foreach="o.bom_id.x_test_id.line_ids" t-as="test" t-if="o.bom_id.x_test_id">
                                <td style="vertical-align: middle; text-align: left;">
                                    <span t-field="test.param.name"
                                          style="padding: 5px; display: block;"/>
                                </td>
                                <td style="vertical-align: middle;">
                                    <span t-field="test.min_value"
                                          style="padding: 5px; display: block;"/>
                                </td>
                                <td style="vertical-align: middle;">
                                    <span t-field="test.max_value"
                                          style="padding: 5px; display: block;"/>
                                </td>
                                <td style="vertical-align: middle;">
                                    <span t-field="test.target"
                                          style="padding: 5px; display: block;"/>
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <!--    "binding_model_id" is set to false hide this report menu from "print" dropdown -->
    <record id="action_report_production_workorder_report" model="ir.actions.report">
        <field name="name">Production WorkOrder Report</field>
        <field name="model">mrp.production</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rminds_production_report.report_mrpproduction</field>
        <field name="report_file">rminds_production_report.report.production_workorder</field>
        <field name="print_report_name">'Production Report - %s' % object.name</field>
        <!--        <field name="binding_model_id" eval="False"/>-->
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_type">report</field>
    </record>


    <record model="ir.actions.server" id="action_print_production_workorder_report">
        <field name="name">Production WorkOrder Report</field>
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="state">code</field>
        <field name="binding_view_types">form</field>
        <field name="code">
            if records:
            action = records.generate_production_workorder_report()
        </field>
    </record>


</odoo>