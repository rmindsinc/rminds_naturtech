<!--                                </group>-->
<!--                            </group>-->

                        </form>
                    </field>
                </page>
                <page name="revision_memo" string="Revision">
                    <group name="revision_memo" string="Revision History">
                        <field name="x_revision_memo" nolabel="1"></field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>



